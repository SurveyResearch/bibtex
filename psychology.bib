	author = {Brinkmann, Svend},
	month = sep,
	year = {2010},
	keywords = {Discursive Psychology, Person, Self, Subject formation},
	pages = {75--89}
}

@article{coulter_discourse_1999,
	title = {Discourse and Mind},
	volume = {22},
	%issn = {0163-8548},
	url = {http://www.jstor.org/stable/20011238},
	abstract = {In recent years, various attempts have been made to advance a project sometimes characterized as "discursive psychology". Grounded in what its proponents term "social constructionism", the discursive approach to the elucidation of 'mental' phenomena is here contrasted to an ethnomethodological position informed by the later work of Wittgenstein. In particular, it is argued that discursive psychology still contains Cartesian residua, notwithstanding its professed objective of expurgating Cartesian thought from the behavioral sciences. One principal issue has been the confusion of "conceptual analysis" with the empirical study of speech practices. If these distinct enterprises are conflated, the critical achievements of conceptual analysis are obscured or even misconstrued. A different picture of how best to analyze human conduct and mentality emerges if the lessons of Wittgensteinian grammatical analysis are preserved and extended, one more compatible with several themes in ethnomethodology.},
	number = {2/4},
	journal = {Human Studies},
	author = {Coulter, Jeff},
	month = oct,
	year = {1999},
	keywords = {Discourse analysis, Discursive Psychology, Social Constructionism},
	pages = {163--181}
}
